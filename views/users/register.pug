extends ../layout

block content
    h2.page-header Register
    p Please register using the form
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method="post", action="/users/register", enctype="multipart/form-data")
        .form-group
            label Name
            input.form-control(name="name", type="text", placeholder="Enter Name")
        .form-group
            label Email
            input.form-control(name="email", type="email", placeholder="Enter Email")
        .form-group
            label Password
            input.form-control(name="password", type="password", placeholder="Enter Password")
        .form-group
            label Confirm Password
            input.form-control(name="confirmPassword", type="password", placeholder="Enter Confirmation Password")
        .form-group
            label Profile Image
            input.form-control(name="profileImage", type="file")
        input.btn.btn-primary(type="submit", name="submit", value="Register")